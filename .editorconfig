# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
max_line_length = 120

[*.json]
insert_final_newline = ignore
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
